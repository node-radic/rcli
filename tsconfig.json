{
    "compilerOptions": {
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2017", "es2017.object"],
        "noResolve": false,
        "types":[
            "jasmine"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "./src",
        "./spec/**/*.ts",
        "./bin",
        "./types/**/*.ts"
    ]
}
